print("This is from within Python")

import onionGpio

import time

#GPIO Pin Numbers
P1=0
#P2=6

G0=onionGpio.OnionGpio(P1)
G0.setOutputDirection(0)
#G1=onionGpio.OnionGpio(P2)
#G1.setOutputDirection(0)





for x in range (3):

    # printing the start time
    print("The time of start of loop : ")
    print(time.ctime())
    print("<br>")
    G0.setValue(1)
    #G1.setValue(0)
    # using sleep() to hault the code execution
    time.sleep(1)


    # printing the end time
    print("The time of end of loop : ")
    print(time.ctime())
    print("<br>")
    G0.setValue(0)    
    #G1.setValue(1)
    # using sleep() to hault the code execution
    time.sleep(1)

G0.setValue(0)
#G1.setValue(0)
